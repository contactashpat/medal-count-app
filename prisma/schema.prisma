generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Country {
  id      Int     @id @default(autoincrement())
  code    String  @unique
  name    String
  medals  Medal[]
}

model Year {
  id     Int     @id @default(autoincrement())
  value  Int     @unique
  medals Medal[] // relation
}

model Medal {
  id        Int      @id @default(autoincrement())
  type      String
  count     Int
  country   Country  @relation(fields: [countryId], references: [id])
  countryId Int
  year      Year?    @relation(fields: [yearValue], references: [value])
  yearValue Int?
}
